<li class="feed_line">

  <div class="span-2 feed_photo">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </div>
  <div class="wrap span-10">
    <div>
      <%= link_to feed_item.user.name, feed_item.user %>
    </div>
    <div>
      <h4>
        <%= feed_item.content %>
      </h4>
    </div>
    <div class="feed_item_create_date">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </div>
  </div>

  <% if current_user?(feed_item.user) %>

    <div class="right span-1 small">
      <%= link_to "delete", feed_item, :method => :delete,

        :confirm => "You sure?",
        :title => feed_item.content %>
    </div>
  <% end %>
  
  <% user = feed_item.user rescue User.find(feed_item.user_id) %>
  <% if current_user?(user) %>

    <% unless feed_item.likes_count == 0 %>
      <div id="like_count_<%= feed_item.id %>" class="right small">
        <%= pluralize(feed_item.likes_count, "Like") %>&nbsp &nbsp
      </div>
    <% end %>

  <% else %>

    <div class="span-2 small right">
      <%= render 'microposts/like_form', :micropost => feed_item %>
    </div>


  <% end %>


</li>